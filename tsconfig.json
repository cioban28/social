{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": ["dom", "es2016", "es2017"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": "app",
    "rootDirs": ["app", "node_modules"],
    "paths": {
      "@src/*": ["./app/*"],
      "ramda/src/*": ["./node_modules/npm-ramda-package/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "scripts", "acceptance-tests", "webpack", "jest", "**/*.spec.ts", "**/*.test.ts"]
}
